{
  "LINK_RESET_PWD": {
    "name": "Reset Password Link",
    "group": "links",
    "description": "A reset password link template. Click for more details how templating works.",
    "link": "https://mozilla.github.io/nunjucks/templating.html",
    "defaultValue": "{{app.publicAddress}}{{app.prefix}}/auth/reset/{{token}}"
  },
  "PHONE_ENABLED": {
    "name": "Enable phone validation",
    "group": "validations",
    "defaultValue": false,
    "schema": {
      "type": "boolean"
    }
  },
  "PHONE_VALIDATE": {
    "name": "Phone should be validated?",
    "group": "validations",
    "defaultValue": false,
    "schema": {
      "type": "boolean"
    }
  },
  "PHONE_CODE_LENGTH": {
    "name": "Phone code length",
    "group": "validations",
    "defaultValue": 4,
    "schema": {
      "type": "integer"
    }
  },
  "PHONE_MAX_TRIES": {
    "name": "Phone max tries",
    "group": "validations",
    "defaultValue": 10,
    "schema": {
      "type": "integer"
    }
  },
  "PHONE_IS_AUTHENTICATE": {
    "name": "Authticate user when phone validated",
    "group": "validations",
    "defaultValue": false,
    "schema": {
      "type": "boolean"
    }
  },
  "PHONE_MAX_RESENDS": {
    "name": "Phone code max resends",
    "defaultValue": 4,
    "schema": {
      "type": "integer"
    }
  },
  "ADMIN_ENABLED": {
    "group": "validations",
    "name": "Enable admin validation",
    "defaultValue": false,
    "schema": {
      "type": "boolean"
    }
  },
  "ADMIN_VALIDATE": {
    "group": "validations",
    "name": "Admin validation is mondatory",
    "defaultValue": false,
    "schema": {
      "type": "boolean"
    }
  },
  "ADMIN_CODE_LENGTH": {
    "group": "validations",
    "name": "Admin validation code length",
    "defaultValue": 80,
    "schema": {
      "type": "integer"
    }
  },
  "ADMIN_MAX_TRIES": {
    "group": "validations",
    "name": "Admin validation max tries",
    "defaultValue": 10,
    "schema": {
      "type": "integer"
    }
  },
  "ADMIN_MAX_RESENDS": {
    "group": "validations",
    "name": "Admin validation code max resends",
    "defaultValue": 4,
    "schema": {
      "type": "integer"
    }
  },
  "EMAIL_ENABLED": {
    "name": "Enable email validation",
    "group": "validations",
    "defaultValue": true,
    "schema": {
      "type": "boolean"
    }
  },
  "EMAIL_VALIDATE": {
    "name": "Email should be validated?",
    "group": "validations",
    "defaultValue": false,
    "schema": {
      "type": "boolean"
    }
  },
  "EMAIL_CODE_LENGTH": {
    "name": "Email code length",
    "group": "validations",
    "defaultValue": 80,
    "schema": {
      "type": "integer"
    }
  },
  "EMAIL_MAX_TRIES": {
    "name": "Email max tries",
    "group": "validations",
    "defaultValue": 10,
    "schema": {
      "type": "integer"
    }
  },
  "EMAIL_IS_AUTHENTICATE": {
    "name": "Authenticate user when email validated",
    "group": "validations",
    "defaultValue": false,
    "schema": {
      "type": "boolean"
    }
  },
  "EMAIL_MAX_RESENDS": {
    "name": "Email code max resends",
    "group": "validations",
    "defaultValue": 4,
    "schema": {
      "type": "integer"
    }
  },
  "EMAIL_TTL": {
    "name": "Email TTL",
    "description": "Time to live for non validated email addresses (in seconds). Click for more details about TTL indexes.",
    "link": "https://docs.mongodb.com/manual/core/index-ttl",
    "group": "validations",
    "defaultValue": -1,
    "schema": {
      "type": "integer"
    }
  },
  "TWILIO_FROM": {
    "name": "Twilio \"From\" field",
    "defaultValue": "TWILIO_FROM"
  },
  "TWILIO_ACCOUNT_SID": {
    "name": "Twilio Accound SID",
    "defaultValue": "TWILIO_ACCOUNT_SID"
  },
  "TWILIO_AUTH_TOKEN": {
    "name": "Twilio token",
    "defaultValue": "TWILIO_AUTH_TOKEN"
  },
  "SENDGRID_API_KEY": {
    "name": "Sendgrid API key",
    "group": "mailer",
    "defaultValue": "SENDGRID_API_KEY"
  },
  "MAILER_FROM": {
    "name": "Mailer From",
    "group": "mailer",
    "defaultValue": "MAILER_FROM@example.com"
  },
  "MAILER_HOST": {
    "name": "SMTP hostname/IP address",
    "link": "https://mailtrap.io/",
    "group": "mailer",
    "defaultValue": "smtp.mailtrap.io"
  },
  "MAILER_PORT": {
    "name": "Mailer port",
    "group": "mailer",
    "defaultValue": 2525,
    "schema": {
      "type": "integer"
    }
  },
  "MAILER_SECURE": {
    "name": "Is mailer secured?",
    "group": "mailer",
    "defaultValue": false,
    "schema": {
      "type": "boolean"
    }
  },
  "MAILER_AUTH_USER": {
    "name": "Mailer username",
    "group": "mailer",
    "defaultValue": "MAILER_AUTH_USER"
  },
  "MAILER_AUTH_PASS": {
    "name": "Mailer password",
    "group": "mailer",
    "defaultValue": "MAILER_AUTH_PASS",
    "field": {
      "type": "password"
    }
  },
  "DEFAULT_GROUPS": {
    "name": "Default groups",
    "defaultValue": "user"
  },
  "JWT_ENABLED": {
    "name": "Enable JWT Tokens",
    "defaultValue": false,
    "group": "jwt",
    "schema": {
      "type": "boolean"
    }
  },
  "JWT_KEY_TYPE": {
    "name": "Key type",
    "defaultValue": "string",
    "group": "jwt",
    "schema": {
      "type": "string",
      "enum": ["file", "string"]
    }
  },
  "JWT_PRIVATE_KEY": {
    "name": "Private key",
    "defaultValue": "SOME RANDOM KEY",
    "group": "jwt"
  },
  "JWT_PUBLIC_KEY": {
    "name": "Public Key",
    "defaultValue": "",
    "group": "jwt"
  },
  "JWT_ALG": {
    "name": "Algorithm",
    "defaultValue": "HS256",
    "group": "jwt",
    "schema": {
      "type": "string",
      "enum": [
        "RS256",
        "RS384",
        "RS512",
        "PS256",
        "PS384",
        "PS512",
        "ES256",
        "ES384",
        "ES512",
        "HS256",
        "HS384",
        "HS512",
        "none"
      ]
    }
  },
  "JWT_EXPIRES_IN": {
    "name": "Expires In",
    "description": "Time before the JWT expiration",
    "defaultValue": "2 days",
    "link": "https://github.com/vercel/ms",
    "group": "jwt"
  },
  "CAPITALIZE_FULLNAME": {
    "name": "Capitalize user full name",
    "defaultValue": true,
    "schema": {
      "type": "boolean"
    }
  }
}
